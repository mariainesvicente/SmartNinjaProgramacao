variable1 = int(input("Introduza o primeiro número:"))
variable2 = int(input("Introduza o segundo número:"))
variable3 = input("Introduza o sinal da operação (+,-,*,/):")

if variable3 == "+":
    print(variable1 + variable2)
elif variable3 == "-":
    print(variable1 - variable2)
elif variable3 == "*":
    print(variable1 * variable2)
elif variable3 == "/":
    print(variable1 / variable2)
else:
    print("Não reconheço o sinal introduzido")
